<UserControl x:Class="HoldMyTabs.SaveTabsWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="350" Height="150">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <ComboBox Name="comboSavedInfo" Width="200" Height="25" Margin="0,0,10,0"/>
            <Button Name="btnOpen" Width="75" Height="25" Click="btnOpen_Click">Open</Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,0">
            <TextBox Name="FileNameTextBox" TextWrapping="Wrap" Text="TextBox" Width="255" Margin="0,0,0,0" />
            <Button Name="btnSave" Width="75" Height="25" Margin="0,0,0,0" Click="btnSave_Click">Save</Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
            <Button Name="btnDelete" Width="75" Height="25" Click="btnDelete_Click">Delete</Button>
        </StackPanel>
    </Grid>
</UserControl>
