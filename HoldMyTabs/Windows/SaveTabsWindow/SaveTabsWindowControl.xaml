<UserControl x:Class="HoldMyTabs.SaveTabsWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="350" Height="250">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <ComboBox Name="comboSavedInfo" Width="200" Height="25" Margin="0,0,10,0"/>
            <Button Name="btnOpen" Width="75" Height="25" Click="btnOpen_Click">Open</Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,0">
            <TextBox Name="FileNameTextBox" TextWrapping="Wrap" Text="TextBox" Width="255" Margin="0,0,0,0" />
            <Button Name="btnSave" Width="75" Height="25" Margin="0,0,0,0" Click="btnSave_Click">Save</Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
            <Button Name="btnDelete" Width="75" Height="25" Click="btnDelete_Click">Delete</Button>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="3" Margin="0,10,0,0">
            <TextBlock Text="If the order of tabs matter and you made any changes, you have to restart Visual Studio before save operation, because IDE do not offer posibility to extract tabs order at real time"
                   TextWrapping="Wrap"
                   FontSize="10"
                   Foreground="White"
                   Margin="10" />
        </StackPanel>
    </Grid>
    
</UserControl>
